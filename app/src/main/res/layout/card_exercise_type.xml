<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivExerciseTypeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvExerciseTypeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvExercisesTypeName"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ivExerciseTypeImage" />

        <TextView
            android:id="@+id/tvExerciseTypeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvExerciseTypeDescription"
            android:layout_below="@+id/tvExerciseTypeName"
            android:layout_toEndOf="@+id/ivExerciseTypeImage" />

    </RelativeLayout>

</android.support.v7.widget.CardView>